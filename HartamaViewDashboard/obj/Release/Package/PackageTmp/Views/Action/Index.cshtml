@model HartamaViewDashboard.Models.ActionModel
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Module Feature</title>
</head>
<body>
    

    <div id="body">
        <div class="row wrapper border-bottom white-bg page-heading">
            <div class="col-lg-8">
                <h2>Action</h2>
                <ol class="breadcrumb">
                    <li>
                        <a href="#" onclick="utility._loadMenu('../Dashboards/Home')">@Resources.Resource.LabelHome</a>
                    </li>
                    <li class="active" id="ftr-name">
                        <strong>Action</strong>
                    </li>
                </ol>
            </div>
            <div class="ibox-tools">
                <a><i class="fa fa-question"></i></a>
            </div>
        </div>
        <div class="wrapper wrapper-content animated fadeIn">
            <div class="row" id="render-body">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins" id="box-content">
                        <div class="ibox-title">
                            <h5> @Resources.Resource.DataList </h5>
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div id="ActionMessage" class="col-sm-12">

                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>

                    <div class="ibox float-e-margins" id="FeatureInformation">
                        <div class="ibox-title">
                            <h3>@Resources.Resource.Information</h3>
                        </div>
                        <div class="ibox-content">

                            @using (Html.BeginForm("Create", null, FormMethod.Post, new { name = "Form-Action", id = "Form-Action", @enctype = "multipart/form-data", @xxx = "Create" }))
                            {
                                <div class="form-horizontal">
                                    @Html.HiddenFor(model => Model.Device_ID)
                                    @Html.HiddenFor(model => Model.IDNotif)
                                    <div class="form-group">
                                        <label class="col-sm-3 col-lg-4 control-label">@Resources.Resource.AssetLabelAssetName</label>
                                        <div class="col-sm-9 col-lg-8">
                                            @Html.TextBoxFor(model => Model.DeviceName, new { @class = "form-control", @required = "required", @MaxLength = "50",@readonly="readonly" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 col-lg-4 control-label">@Resources.Resource.SiteLabelSiteName</label>
                                        <div class="col-sm-9 col-lg-8">
                                            @Html.TextBoxFor(model => Model.SiteName, new { @class = "form-control", @required = "required", @MaxLength = "500", @readonly = "readonly" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 col-lg-4 control-label">@Resources.Resource.StatusTypeLabelStatusTypeDesc</label>
                                        <div class="col-sm-9 col-lg-8">
                                            @Html.DropDownList("ActionType", ViewData["LT"] as SelectList, "", new { @class = "form-control m-b ignore", @required = "",@readonly="readonly" })
                                           

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 col-lg-4 control-label">@Resources.Resource.Description</label>
                                        <div class="col-sm-9 col-lg-8">
                                            @Html.TextAreaFor(model => Model.ActionDescription, new { @class = "form-control", @required = "required", @MaxLength = "500" })
                                        </div>
                                    </div>
                                    
                                    <div class="form-group ">
                                        <label class="col-md-4 control-label"></label>
                                        <div class="button-custom-style pull-right col-md-8 ">
                                            <button class="btn btn-primary" type="button" id="btnSaveRow"><i class="fa fa-save"></i> @Resources.Resource.ButtonSave </button>
                                            
                                            <button class="btn btn-outline btn-default" type="button" id="btnCancelRow"><i class="fa fa-close"></i> @Resources.Resource.ButtonCancel </button>
                                        </div>
                                    </div>

                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>

        

        <script type="text/javascript">

            $(document).ready(function () {

                $("#Form-Action #IDNotif").val(paramdo.idnotif)
                $("#Form-Action #DeviceName").val(paramdo.devicename)
                $("#Form-Action #SiteName").val(paramdo.site)
                $("#Form-Action #ActionType").val(paramdo.type)

                $.getScript("../Scripts/main/TAction.js", {
                    cache: true
                }).done(
                    function () {
                        var param = {};
                        param.attribute = {

                            "Info": "@Resources.Resource.LabelShowing",
                            "Page": "@Resources.Resource.LabelPage",
                            "Of": "@Resources.Resource.LabelOf",
                            "ZeroResult": "@Resources.Resource.LabelZeroResult",
                            "InfoEmpty": "@Resources.Resource.LabelInfoEmpty",
                            "Previous": "@Resources.Resource.LabelPrev",
                            "Next": "@Resources.Resource.LabelNext",
                            "Last": "@Resources.Resource.LabelLastPage",
                            "First": "@Resources.Resource.LabelFirstPage",
                            "To": "@Resources.Resource.LabelTo",
                            "Entries": "@Resources.Resource.LabelEntries",
                            "Warning": "@Resources.Resource.LabelWarning",
                            "PickOneData": "@Resources.Resource.AlertPickOneData",
                            "CanDelete": "@ViewBag.Role.BindDelete.ToString()",
                            "CanSave": "@ViewBag.Role.BindNew.ToString()",
                            "CanEdit": "@ViewBag.Role.BindEdit.ToString()",
                            "CanView": "@ViewBag.Role.BindView.ToString()",
                            "CanPrint": "@ViewBag.Role.BindPrintable.ToString()"
                        }
                        TAction.init(param);
                    }
                )
            });
      

        </script>

    

</body>

</html>
