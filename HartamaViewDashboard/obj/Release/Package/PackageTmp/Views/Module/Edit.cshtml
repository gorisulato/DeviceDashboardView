@model HartamaViewDashboard.Models.TModuleModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>


    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Edit TModule</h5>
                    </div>
                    <div class="ibox-content">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">

                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.IDModule)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ModuleCode, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ModuleCode)
                                        @Html.ValidationMessageFor(model => model.ModuleCode)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ModuleName, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ModuleName)
                                        @Html.ValidationMessageFor(model => model.ModuleName)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ModuleDesc, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ModuleDesc)
                                        @Html.ValidationMessageFor(model => model.ModuleDesc)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.UserEntry, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.UserEntry)
                                        @Html.ValidationMessageFor(model => model.UserEntry)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.DateEntry, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DateEntry)
                                        @Html.ValidationMessageFor(model => model.DateEntry)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.UserLastMaintenance, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.UserLastMaintenance)
                                        @Html.ValidationMessageFor(model => model.UserLastMaintenance)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.DateLastMaintenance, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DateLastMaintenance)
                                        @Html.ValidationMessageFor(model => model.DateLastMaintenance)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Sequence, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Sequence)
                                        @Html.ValidationMessageFor(model => model.Sequence)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-white" })
                                    </div>
                                </div>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>
