@{
    Layout = null;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-8">
        <h2>Notification</h2>
        <ol class="breadcrumb">
            <li>
                <a href="#" onclick="utility._loadMenu('../Dashboards/Home')">@Resources.Resource.LabelHome</a>
            </li>
            <li class="active" id="ftr-name">

            </li>
        </ol>
    </div>
    <div class="wrapper wrapper-content animated fadeIn">
        <div class="row" id="render-body">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                        <div class="mail-box">
                            <div class="mail-tools tooltip-demo m-t-md">
                               
                            </div>
                            <div id="NotificationContent" data-total-records="@ViewBag.TotalRecords">
                                <table id="NOTIFICATIONNOTIFICATION" class="table table-striped table-bordered table-hover dataTables-example custom_table_scroll" tabindex="1">
                                    <thead>
                                        <tr>
                                            <th>@Resources.Resource.NotificationLabelNotificationCode</th>
                                            <th>@Resources.Resource.NotificationLabelNotificationDeviceName</th>
                                            <th>@Resources.Resource.NotificationLabelNotificationTitle</th>
                                            <th>@Resources.Resource.NotificationLabelNotificationMessages</th>
                                            <th>@Resources.Resource.NotificationLabelNotificationSite</th>
                                            <th>@Resources.Resource.NotificationLabelNotificationActionCode</th>
                                            <th>@Resources.Resource.NotificationLabelNotification</th>
                                            <th>@Resources.Resource.NotificationLabelNotificationActionDescription</th>
                                            <th>@Resources.Resource.NotificationLabelActionTakenBy</th>
                                            <th>@Resources.Resource.NotificationLabelNotificationStatus</th>
                                            <th>@Resources.Resource.Date</th>
                                            <th>@Resources.Resource.TimeNotification</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {

        $.getScript("../Scripts/main/ReadAllNotification.js", {
            cache: true
        }).done(
         function () {
             
             ReadAllNotif.init();
         }
     )

    })
</script>
