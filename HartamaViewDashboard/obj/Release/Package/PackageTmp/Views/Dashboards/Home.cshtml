                                            + '<h1 class="title-chart">' + value[z].Detail_SensorName + '</h1> ' +
                                            '<div id="chart'+ value[z].Detail_SensorName.trim() +'" > ' +

                                            '</div>' +
                                    ' </div> ';
                                    $("#content-chart").append(a);

                                   
                                    
                                }



                             
                                
                            }
                            color = colorpallete[xx];
                            //if (xx <= 4) {
                            //    color = ["#c6cee3", "#ddf5f9", "#f0c8c8"];

                            //}
                            //else if (xx > 4 && xx <= 9) {
                            //    color = ["#c6cee3", "#ddf5f9", "#f0c8c8"];
                            //}
                            GenerateChart(iddata, unique,color)
                           
                            iddata=[]
                            valuedata=[]
                          
