                         ["Humidity", dataJson.Humidity == null ? 0 : dataJson.Humidity],
                          ["Temprature", dataJson.Temprature == null ? 0 : dataJson.Temprature],
                           ["Preasure", dataJson.Preasure == null ? 0 : dataJson.Preasure],
                        ]
                    });
                }
            }
            //console.log(chart)
            
