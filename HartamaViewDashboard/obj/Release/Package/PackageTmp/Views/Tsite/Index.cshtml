                                    <div id="SiteMessage" class="col-sm-12">

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="ibox-content">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <button class="btn btn-primary" type="button" id="btnSiteAddRow"><i class="fa fa-plus"></i> @Resources.Resource.ButtonAdd </button>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                
                                <div class="col-md-8 col-lg-9">
                                  
                                    <div class="alert alert-danger alert-dismissable " aria-hidden="true" style="display :none;" id="errorDivUpdate">
                                        <button class="close" type="button" data-ng-hide="alert" aria-hidden="true">×</button>
                                        <div id="errorMsgDivUpdate"></div>
                                    </div>
                                    <div class="alert alert-success" id="successDiv"></div>
                                    <input type="hidden" id="hiddenIDFeature" value="" />
                                    <table id="SITESITE" class="table table-striped table-bordered table-hover dataTables-example custom_table_scroll" tabindex="1">
                                        <thead>
                                            <tr>
                                                <th>@Resources.Resource.SiteLabelSiteName</th>
                                                <th>@Resources.Resource.SiteLabelAddress</th>
                                                <th>@Resources.Resource.SiteLabelFax</th>
                                                <th>@Resources.Resource.SiteLabelPIC</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="ibox float-e-margins" id="SiteInformation">
                        <div class="ibox-title">
                            <h3>@Resources.Resource.Information</h3>
                        </div>
                        <div class="ibox-content">

                            @using (Html.BeginForm("Create", null, FormMethod.Post, new { name = "Form-Site", id = "Form-Site", @enctype = "multipart/form-data", @xxx = "Create" }))
                            {
                                <div class="form-horizontal">
                                    @Html.HiddenFor(model => Model.IDSite)
                                 
                                    <div class="form-group">
                                        <label class="col-sm-3 col-lg-4 control-label">@Resources.Resource.SiteLabelSiteName</label>
                                        <div class="col-sm-9 col-lg-8">
                                            @Html.TextBoxFor(model => Model.SiteName, new { @class = "form-control", @required = "required", @MaxLength = "20" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 col-lg-4 control-label">@Resources.Resource.SiteLabelAddress</label>
                                        <div class="col-sm-9 col-lg-8">
                                            @Html.TextAreaFor(model => Model.Address, new { @class = "form-control", @required = "required", @MaxLength = "100" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 col-lg-4 control-label">@Resources.Resource.ZipCode</label>
                                        <div class="col-sm-9 col-lg-8">
                                            @Html.TextBoxFor(model => Model.PostCode, new { @class = "form-control", @type="number",@MaxLength = "10" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 col-lg-4 control-label">@Resources.Resource.PhoneNumber</label>
                                        <div class="col-sm-9 col-lg-8">
                                            @Html.TextBoxFor(model => Model.TelephoneNo, new { @class = "form-control", @type = "number", @MaxLength = "20" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 col-lg-4 control-label">@Resources.Resource.Fax</label>
                                        <div class="col-sm-9 col-lg-8">
                                            @Html.TextBoxFor(model => Model.FaxNo, new { @class = "form-control", @type = "number", @MaxLength = "20" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 col-lg-4 control-label">@Resources.Resource.Email</label>
                                        <div class="col-sm-9 col-lg-8">
                                            @Html.TextBoxFor(model => Model.Email, new { @class = "form-control", @MaxLength = "50" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 col-lg-4 control-label">@Resources.Resource.SiteLabelPIC</label>
                                        <div class="col-sm-9 col-lg-8">
                                            @Html.TextBoxFor(model => Model.PICSite, new { @class = "form-control", @MaxLength = "50" })
                                        </div>
                                    </div>

                                    

                                    <div class="form-group">
                                        <label class="col-sm-3 col-lg-4 control-label">@Resources.Resource.LabelDiscontinue</label>
                                        <div class="col-sm-9 col-lg-8">
                                           @Html.DropDownList("DiscontinueSite", ViewData["LGRT"] as SelectList, "", new { @class = "form-control m-b ignore", @required = "" })
                                            @Html.HiddenFor(c=>c.Discontinue)
                                           
                                        </div>
                                    </div>

                                    
                                    <div class="form-group" id="divuserentrysite">
                                        <label class="col-sm-3 col-lg-4 control-label">@Resources.Resource.LabelUserEntry</label>
                                        <div class="col-sm-9 col-lg-8">
                                            @Html.TextBoxFor(model => Model.UserEntry, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                    </div>
                                    <div class="form-group" id="divdateentrysite">
                                        <label class="col-sm-3 col-lg-4 control-label">@Resources.Resource.LabelDateEntry</label>
                                        <div class="col-sm-9 col-lg-8">
                                            @Html.TextBoxFor(model => Model.DateEntry, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                    </div>
                                    <div class="form-group" id="divuserlastmaintenancesite">
                                        <label class="col-sm-3 col-lg-4 control-label">@Resources.Resource.LabelUserLastMaintenance</label>
                                        <div class="col-sm-9 col-lg-8">
                                            @Html.TextBoxFor(model => Model.UserLastMaintenance, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                    </div>
                                    <div class="form-group" id="divdatelastmaintenancesite">
                                        <label class="col-sm-3 col-lg-4 control-label">@Resources.Resource.LabelDateLastMaintenance</label>
                                        <div class="col-sm-9 col-lg-8">
                                            @Html.TextBoxFor(model => Model.DateLastMaintenance, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label class="col-md-4 control-label"></label>
                                        <div class="button-custom-style pull-right col-md-8 ">
                                            <button class="btn btn-primary" type="button" id="btnSaveRowsite"><i class="fa fa-save"></i> @Resources.Resource.ButtonSave </button>
                                            <button class="btn btn-primary" type="button" id="btnDeleteRowsite"><i class="fa fa-trash"></i> @Resources.Resource.ButtonDelete </button>
                                            <button class="btn btn-outline btn-default" type="button" id="btnCancelRowsite"><i class="fa fa-close"></i> @Resources.Resource.ButtonCancel </button>
                                        </div>
                                    </div>

                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="DeleteModal" class="modal inmodal" aria-hidden="true" role="dialog" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content animated fadeIn ">
                    <div class="modal-header">
                        <h3 class="modal-title">@Resources.Resource.FeatureLabelFeature - @Resources.Resource.ButtonDelete</h3>
                        <div class="ibox-tools">
                            <a class="active-tooltips">
                                <span class="tooltipster-icon">
                                    <i class="fa fa-question "></i>
                                </span>
                            </a>
                        </div>
                    </div>
                    <div class="modal-body" id="modal-Render">

                    </div>
                    <div class="modal-footer">
                        <div class="col-xs-12 col-sm-9 col-md-10 delete-caption">
                            @Resources.Resource.LabelDelete
                        </div>
                        <div class=" col-xs-12 col-sm-3 col-md-2 pull-right">
                            <input value="@Resources.Resource.ButtonNo" type="button" class="btn btn-default btn-outline" id="frm-cancel-btn" />
                            <input value="@Resources.Resource.ButtonYes" type="button" class="btn btn-primary" id="frm-submit-btn" />
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div id="ModuleModal" class="modal inmodal" aria-hidden="false" role="dialog" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content animated fadeIn ">
                    <div class="modal-header">
                        <h3 class="modal-title">@Resources.Resource.ModuleLabelModuleName</h3>
                        <div class="ibox-tools">
                            <a class="active-tooltips">
                                <span class="tooltipster-icon">
                                    <i class="fa fa-question "></i>
                                </span>
                            </a>
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="button-custom-style">
                            <div class="input-group m-b left-element">
                                <input class="form-control m-b" type="text" placeholder="Search..." id="customSearch">
                                <span class="input-group-btn left-element">
                                    <button class="btn btn-primary" type="button" id="frm-lov-btn-src"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                            <input id="ActModule" type="hidden" value="" name="ActModule">
                            <button class="btn  btn-primary " type="button" id="btnMdlMove"><i class="fa fa-exchange "></i> @Resources.Resource.ButtonMove</button>
                            <button class="btn  btn-primary " type="button" id="btnMdlDuplicate"><i class="fa fa-paste"></i> @Resources.Resource.ButtonDuplicate</button>
                        </div>
                        <div>
                            <table id="FEATURETMODULEModal" class="table table-striped table-bordered table-hover dataTables-example " tabindex=1>
                                <thead>
                                    <tr>
                                        <th>@Resources.Resource.ModuleLabelModuleCode</th>
                                        <th>@Resources.Resource.ModuleLabelModuleName</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                </tfoot>
                            </table>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline btn-default" data-dismiss="modal" id="closeModal">Close</button>
                    </div>
                </div>
            </div>
        </div>

