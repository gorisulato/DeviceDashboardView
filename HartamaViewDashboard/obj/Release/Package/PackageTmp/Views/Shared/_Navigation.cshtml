<div id="ChangePasswordModal" class="modal inmodal" aria-hidden="true" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content animated fadeIn ">
            <div class="modal-header">
                <h4 class="modal-title">Change Password</h4>
                <a class="pull-right"><i class="fa fa-question"></i></a>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    @using (Html.BeginForm("UpdatePassword", "TUser", FormMethod.Post, new { name = "Form-UpdatePassword", id = "Form-UpdatePassword", @tabindex = "0", @enctype = "multipart/form-data", @xxx = "Create" }))
                    {
                        <div class="info alert-dismissable" id="errorDiv">
                            <button class="close" type="button" data-ng-hide="alert" aria-hidden="true">×</button>
                            <div id="errorMsgDiv"></div>
                        </div>
                       
                        <div class="form-group">
                            <label class="col-sm-3 control-label">New Password</label>
                            <div class="col-md-6 col-sm-9">
                                @Html.Password("Password", null, new { @class = "form-control", @MaxLength = "100", @required = "" })
                            </div>
                        </div>
                    }
                </div>
        </div>
        <div class="modal-footer">
            <div class="form-group ">
                <div class=" col-lg-12 delete-caption">
                    <strong id="modalCaption"></strong>
                </div>
                <div class="col-lg-12 text-right">
                    <input value="Change Password" type="button" class="btn btn-outline btn-default" id="btn-changepassword" />
                    <input value="Cancel" type="button" class="btn btn-primary" id="btn-cancelChangePassword" />
                </div>
            </div>
        </div>
            </div>
    </div>
</div>

